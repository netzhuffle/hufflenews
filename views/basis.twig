<!DOCTYPE HTML>
{# Grundgerüst #}
{#	{% Forschleifen, ... ausführen %}	#}
{#	{{ Ausdruck ausgeben }}	#}
<html>
	<head>
		<title>Hufflepuff-News</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8">
		<meta charset="utf-8">
		{% block css %}
		<style>
			body {
				{% block cssbody %}
				margin: 0px;
				padding: 0px;
				background: url({{ app.request.uriForPath("/views/paper.gif") }});
				{% endblock %}
			}
			img {
				{% block cssimg %}
				position: absolute;
				top: 0px;
				left: 0px;
				height: 380px;
				width: 380px;
				{% endblock %}
			}
			textarea {
				border: 2px solid black;
				background: url({{ app.request.uriForPath("/views/paper.gif") }});
        		text-align: center;
        		font-family: 'Comic Sans MS', sans-serif;
        		font-size: 1em;
        		left: 200px;
        		right: 50px;
			}
			#inhalt {
				{% block cssinhalt %}
				position: absolute;
				top: 200px;
				left: 200px;
				right: 50px;
				z-index: 600;
				text-align: center;
				font-family: 'Comic Sans MS', sans-serif;
				font-size: 1.3em;
				{% endblock %}
			}
			#nichthtmltext {
				background: white;
				text-align: left;
				font-family: monospace;
				font-size: 0.8em;
				font-style: inherit;
				white-space: pre;
				padding: 0.5em
			}
			#userliste {
			text-align: left;
			}
			.error {
				font-size: 0.8em;
				color: #ff0000;
			}
		</style>
		{% endblock %}
	</head>
	<body {% block stylebody %}{% endblock %}>
    	<img {% block styleimg %}{% endblock %} src="{{ app.request.uriForPath("/views/logo.png") }}" alt="Hufflepuff-Newsletter">
		<div id="inhalt" {% block styleinhalt %}{% endblock %}>
			{% autoescape true %}
			{% block content %}{% endblock %}
			{% endautoescape %}
    	</div>
	</body>
</html>