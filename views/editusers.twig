{% extends "basis.twig" %}

{% block content %}
	<div id=userliste>
		<p>Userliste:</p>
		<table>
			{% for user in users %}
				<tr>
					<td> <a href='{{ app.request.uriForPath("/options/" ~ user.token) }}'>[Edit]</td>
					<td>{{ user.name }}</td>
					<td>{{ user.email }}</td>
				</tr>
			{% else %}
			<tr><td>Niemand registriert.</td></tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}